# Venom Spore Configuration
# Copy this file to .env and configure for your node

# ===== BASIC CONFIGURATION =====
SPORE_NODE_NAME=venom-spore-1
SPORE_NEXUS_HOST=localhost
SPORE_NEXUS_PORT=8765
SPORE_SHARED_TOKEN=your-secret-token-here

# ===== NODE CAPABILITIES =====
SPORE_ENABLE_SHELL=true
SPORE_ENABLE_FILE=true
SPORE_ENABLE_DOCKER=false
SPORE_ENABLE_CAMERA=false

# ===== NODE TAGS (comma-separated) =====
# Examples: location:server_room, gpu, camera, scraper
SPORE_NODE_TAGS=

# ===== HEARTBEAT =====
SPORE_HEARTBEAT_INTERVAL=30
