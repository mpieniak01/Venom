{
  "name": "web-next",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "predev": "node scripts/generate-meta.mjs",
    "dev": "next dev",
    "prebuild": "node scripts/generate-meta.mjs",
    "build": "next build",
    "postbuild": "node scripts/prepare-standalone.mjs",
    "start": "node scripts/start-server.mjs",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings 0 && printf \"\\033[32mâœ” Lint OK\\033[0m\\n\"",
    "test:unit": "tsx tests/*.test.ts",
    "test:e2e:latency": "PLAYWRIGHT_REUSE_SERVER=true PLAYWRIGHT_MODE=dev playwright test tests/perf/chat-latency.spec.ts --workers=1",
    "test:e2e:functional": "PLAYWRIGHT_REUSE_SERVER=true PLAYWRIGHT_MODE=dev playwright test tests/smoke.spec.ts tests/chat-mode-routing.spec.ts tests/streaming.spec.ts tests/chat-context-icons.spec.ts",
    "test:e2e:preflight": "node scripts/check-e2e-env.mjs",
    "test:e2e": "npm run test:e2e:preflight && npm run test:e2e:latency && npm run test:e2e:functional",
    "test:e2e:prod": "npm run build && PLAYWRIGHT_MODE=prod playwright test",
    "test:perf": "playwright test --config playwright.perf.config.ts",
    "lint:locales": "tsx scripts/check-locales.ts"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.4",
    "chart.js": "^4.5.1",
    "clsx": "^2.1.1",
    "cytoscape": "^3.33.1",
    "dompurify": "^3.3.1",
    "framer-motion": "^12.23.26",
    "katex": "^0.16.27",
    "lucide-react": "^0.561.0",
    "marked": "15.0.12",
    "mermaid": "10.9.1",
    "next": "15.5.9",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-zoom-pan-pinch": "^3.7.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.9",
    "playwright": "^1.57.0",
    "tailwindcss": "^4",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.21.0",
    "typescript": "^5"
  },
  "overrides": {
    "marked": "15.0.12"
  }
}
